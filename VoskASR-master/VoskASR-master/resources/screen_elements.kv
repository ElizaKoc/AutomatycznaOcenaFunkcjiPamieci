                    pos_hint: {"center_x": 0.5}
                    width: 200
                    height: 50
                    on_release: root.popup.dismiss()

                Button:
                    id: creator_save_button
                    text: 'Add'
                    padding_y: "20dp"
                    padding_x: "20dp"
                    font_size: 18
                    size_hint: None, None
                    pos_hint: {"center_x": 0.5}
                    width: 200
                    height: 50
                    on_release: root.add_new()

<FinishPage>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        ScrollView:
            size_hint: (1, 0.5)

            GridLayout:
                cols: 1
                adaptive_height: True
                padding: '10dp', '15dp'
                spacing: '15dp'

                BoxLayout:
                    orientation: "vertical"
                    pos_hint: 1, None

                    Label:
                        text: "Results saved to folder 'download'"
                        text_size: self.size
                        font_size: 26
                        valign: "middle"
                        halign: "center"

                    Button:
                        id: restart_button
                        text: 'Return to start'
                        font_size: 24
                        size_hint: 0.5, None
                        height: 45
                        pos_hint: {"center_x": 0.5}

<MyLabel@Label>:
    background_color: (182/255, 66/255, 245/255, 1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<MyLabel2@Label>:
    background_color: (182/255, 66/255, 245/255, 1)
    text_size: (self.width, None)
    size: 100, 35
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

