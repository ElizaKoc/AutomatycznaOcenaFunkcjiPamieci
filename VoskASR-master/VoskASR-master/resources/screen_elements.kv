<AudioPlayer>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        ScrollView:
            size_hint: (1, 0.5)

            GridLayout:
                cols: 1
                adaptive_height: True
                padding: '10dp', '15dp'
                spacing: '15dp'

                BoxLayout:
                    id: audio_player
                    orientation: "vertical"
                    pos_hint: 1, None

                    Label:
                        id: song_title
                        text: ""
                        text_size: self.size
                        font_size: 26
                        valign: "middle"
                        halign: "center"

                    Label:
                        id: timestamp
                        text: ""
                        text_size: self.size
                        font_size: 24
                        valign: "middle"
                        halign: "center"

                    Slider:
                        id: slider
                        min: 0
                        max: 1
                        step: 1
                        value: 0
                        on_value: root.change_pos(self.value)

                    Button:
                        id: button
                        text: "Play"
                        font_size: 24
                        size_hint: 0.5, None
                        height: 45
                        pos_hint: {"center_x": 0.5}
                        on_release: root.start_song()

                BoxLayout:
                    id: words_list
                    orientation: "vertical"
                    pos_hint: 0.5, None
                    size_hint: (1, 2)

                    Label:
                        id: words_list_label
                        text: "Recognized words"
                        text_size: self.size
                        font_size: 24
                        valign: "middle"
                        halign: "center"

                    ScrollView:
                        id: scroll_words
                        size: self.size
                        do_scroll_y: True
                        do_scroll_x: False
                        scroll_y: 1
                        effect_cls: 'ScrollEffect'
                        size_hint: (1, 4)

                        GridLayout:
                            id: words_list_params
                            cols: 1
                            pos_hint: 1, None
                            adaptive_height: True
                            adaptive_width: True
                            spacing: "20dp"
                            padding: "50dp"
                            size_hint_y: None
                            height: self.minimum_height
                            width: self.minimum_width
                            canvas.before:
                                Color:
                                    rgba: 0, 0, 1, 0.25
                                Rectangle:
                                    size: self.size
                                    pos: self.pos

<Editor>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        ScrollView:
            size: root.width, root.height
            do_scroll_y: True
            do_scroll_x: False
            scroll_y: 1
            effect_cls: 'ScrollEffect'
            size_hint: (1, 3)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            GridLayout:
                id: editor_layout
                cols: 1
                pos_hint: 1, None
                adaptive_height: True
                adaptive_width: True
                spacing: "10dp"
                padding: "50dp"
                size_hint_y: None
                height: self.minimum_height
                canvas.before:
                    Color:
                        rgba: 0, 0, 1, 0.25
                    Rectangle:
                        size: self.size
                        pos: self.pos

        ScrollView:
            GridLayout:
                id: editor_buttons
                cols: 3
                pos_hint: {'center_x': 0.5}
                adaptive_height: True
                adaptive_width: True
                spacing: "10dp"
                padding: "50dp"
                size_hint_y: None
                height: self.minimum_height

                Button:
                    id: exit_button
                    text: 'Discard changes'
                    padding_y: "20dp"
                    padding_x: "20dp"
                    font_size: 18
                    size_hint: None, None
                    pos_hint: {"center_x": 0.5}
                    width: 200
                    height: 50
                    on_release: root.popup.dismiss()

                Button:
                    id: save_button
                    text: 'Save changes'
                    padding_y: "20dp"
                    padding_x: "20dp"
                    font_size: 18
                    size_hint: None, None
                    pos_hint: {"center_x": 0.5}
                    width: 200
                    height: 50
                    on_press: root.save_changes()

