            GridLayout:
                id: creator_layout
                cols: 1
                pos_hint: 1, None
                adaptive_height: True
                adaptive_width: True
                spacing: "10dp"
                padding: "50dp"
                size_hint_y: None
                height: self.minimum_height
                canvas.before:
                    Color:
                        rgba: 0, 0, 1, 0.25
                    Rectangle:
                        size: self.size
                        pos: self.pos

        ScrollView:
            GridLayout:
                id: creator_buttons
                cols: 2
                pos_hint: {'center_x': 0.5}
                adaptive_height: True
                adaptive_width: True
                spacing: "10dp"
                padding: "50dp"
                size_hint_y: None
                height: self.minimum_height

                Button:
                    id: creator_exit_button
                    text: 'Discard changes'
                    padding_y: "20dp"
                    padding_x: "20dp"
